<Window x:Class="HomeWork_2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HomeWork_2"
        mc:Ignorable="d"
        Title="MainWindow" Height="800" Width="800">
    <StackPanel Name="grid">
        <StackPanel Orientation="Horizontal">
            <Button Name="BtnDrawStar" Height="50" Width="200" 
                    HorizontalAlignment="Left" VerticalAlignment="Top"
                    FontSize="15" Background="DarkRed" Click="BtnDrawStar_Click">
                Нарисовать Звезду</Button>
            <Button Name="BtnDrawTree" Height="50" Width="200"
                    HorizontalAlignment="Right"
                    FontSize="15" Background="DarkRed" Click="BtnDrawTree_Click">
                Нарисовать Дерево</Button>
            <Button Name="BtnTown" Height="50" Width="400"
                    HorizontalAlignment="Right"
                    FontSize="15" Background="DarkRed" Click="BtnTown_Click">
                Ханойские башни</Button>
        </StackPanel>
        <Canvas Name="image" Height="725" Width="800" ></Canvas>
    </StackPanel>
</Window>
